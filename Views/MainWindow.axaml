<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="880"
		Width="1440" Height="880"
		x:DataType="local:MainViewModel"
		xmlns:local="clr-namespace:Heating_Optimization"
        x:Class="Heating_Optimization.MainWindow"
        Title="Heating_Optimization">
	<Window.Background>
		<LinearGradientBrush StartPoint="0,0" EndPoint="1440,880">
			<GradientStop Color="#BF0000" Offset="0"/>
			<GradientStop Color="#590000" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>

	 
	<Grid RowDefinitions="Auto, Auto, *, Auto">
		<!-- Top Part-->
		<Grid Grid.Row="0"  Height="65" ColumnDefinitions="Auto, *, Auto, *, Auto">
			<Rectangle Grid.Column="0"  Width="240">
				<Rectangle.Fill>
					<ImageBrush Source="C:/Users/crist//Heating-Optimization/Assets/Images/danfoss.png" Stretch="UniformToFill"/>
				</Rectangle.Fill>
			</Rectangle>
			<Rectangle   Grid.Column="2" Width="150">
				<Rectangle.Fill>
					<ImageBrush Source="C:/Users/crist//Heating-Optimization/Assets/Images/title.png" Stretch="UniformToFill"/>
				</Rectangle.Fill>
			</Rectangle>
			<Rectangle Grid.Column="1">   </Rectangle>
			<Rectangle Grid.Column="3"  Width="100">   </Rectangle>
			<Rectangle Grid.Column="4"  Width="240">   </Rectangle>
		</Grid>
		<!-- Window Part-->
		<Grid Grid.Row="1"  Height="53" ColumnDefinitions="*, *, *, *, *, *, *, *,*" Background="#D9D9D9">
			<Grid.Styles>
				<Style Selector="Button:pointerover /template/ ContentPresenter">
					<Setter Property="Background" Value="#2A2A2A"></Setter>
					<Setter Property="RenderTransform" Value="scale(0.95)">	</Setter>
				</Style>
			</Grid.Styles>
			<Rectangle Grid.Column="0" Fill="#D9D9D9" >   </Rectangle>
			<Button   VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Content="Main Screen" CornerRadius="25" Background="#BF0000"  Padding="15.8">
			</Button>
			<Rectangle Grid.Column="2" Fill="#D9D9D9" >   </Rectangle>
			<Button   VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="3" Content="Secondary Screen" Background="#BF0000" CornerRadius="25" Padding="15.8">
			</Button>
			<Rectangle Grid.Column="4" Fill="#D9D9D9" >   </Rectangle>
			<Button   VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="5" Content="Third Screen" Background="#BF0000" CornerRadius="25" Padding="15.8">
			</Button>
			<Rectangle Grid.Column="6" Fill="#D9D9D9" >   </Rectangle>
			<Button   VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="7" Content="Fourth Screen" Background="#BF0000" CornerRadius="25" Padding="15.8">
		    </Button>
			<Rectangle Grid.Column="8" Fill="#D9D9D9" >   </Rectangle>
	   </Grid>
	
	<!-- Main Part-->
		<Grid Grid.Row="2"   ColumnDefinitions="Auto, Auto, Auto, Auto,  *" Background="#D9D9D9">
			<Grid.Styles>
				<Style Selector="CheckBox:pointerover /template/ ContentPresenter">
					<Setter Property="RenderTransform" Value="scale(1.1)">	</Setter>
				</Style>
			</Grid.Styles>
			<Rectangle Grid.Column="0" Fill="" Width="30" >	</Rectangle>
			<!-- Machine selection Part-->
			<Grid Grid.Column="1" RowDefinitions="Auto,*, Auto" Width="200" Background="#D9D9D9">
				<Rectangle Grid.Row="0" Fill="#D9D9D9" Height="10">	</Rectangle>
				<Border Grid.Row="1" BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="1.5">
					<StackPanel Grid.Row="1" Background="#C9C9C9" >
						<CheckBox Margin="10" Content="Gas Boiler 1" Padding="10.38" IsChecked="{Binding IsChecked1, Mode=TwoWay}" />
						<CheckBox Margin="10"  Content="Gas Boiler 2"  Padding="10.38" IsChecked="{Binding IsChecked2, Mode=TwoWay}"></CheckBox>
						<CheckBox Margin="10"  Content="Oil Boiler 1"  Padding="10.38" IsChecked="{Binding IsChecked3, Mode=TwoWay}"></CheckBox>
						<CheckBox Margin="10"  Content="Gas Motor 1"  Padding="10.38" IsChecked="{Binding IsChecked4, Mode=TwoWay}"></CheckBox>
						<CheckBox Margin="10"  Content="Heat Pump 1"  Padding="10.38" IsChecked="{Binding IsChecked5, Mode=TwoWay}"></CheckBox>
				    </StackPanel>
				</Border>
				<Rectangle Grid.Row="2" Fill="#D9D9D9" Height="30">	</Rectangle>
			</Grid>
			<Rectangle Grid.Column="2" Fill="" Width="30">	</Rectangle>
			<!-- Filter Part-->
			<Rectangle Grid.Column="3" Fill="#D9D9D9" Width="200">	</Rectangle>
			<!-- Detailed graph Part-->
			<Rectangle Grid.Column="4" Fill="#D9D9D9">	</Rectangle>
			
		</Grid>
	<!--Bottom Part-->
		<Grid Grid.Row="3"  Height="50" ColumnDefinitions="Auto, Auto, *, Auto, *, Auto, Auto">
			<Rectangle Grid.Column="0" Width="50">	</Rectangle>
			<ComboBox Name="PeriodSelectionCombobox" Grid.Column="1" Margin="5" SelectedIndex="0" VerticalAlignment="Center" CornerRadius="10"> 
				<ComboBoxItem  Content="{Binding WinterTime}"/>
				<ComboBoxItem Content="{Binding SummerTime}"/>
			</ComboBox>
			<Rectangle Grid.Column="2" >	</Rectangle>
			<DatePicker Grid.Column="3" Margin="5" VerticalAlignment="Center" CornerRadius="10"  />
			<Rectangle Grid.Column="4" >	</Rectangle>
			<ComboBox Grid.Column="5" Margin="5" SelectedIndex="0" VerticalAlignment="Center" CornerRadius="10">
				<ComboBoxItem Content="Escenario 1"/>
				<ComboBoxItem Content="Escenario 2"/>
				<ComboBoxItem Content="Own Machines"/>	
			</ComboBox>
			<Rectangle Grid.Column="6" Width="50" >	</Rectangle>
		</Grid>
	</Grid>
</Window>
